<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Client.storeController">
   <children>
      <BorderPane layoutX="-1.0" prefHeight="500.0" prefWidth="1000.0">
         <top>
            <HBox prefHeight="42.0" prefWidth="900.0" BorderPane.alignment="CENTER">
               <children>
                  <HBox prefHeight="42.0" prefWidth="199.0">
                     <children>
                        <TextField fx:id="searchField" prefHeight="28.0" prefWidth="153.0">
                           <HBox.margin>
                              <Insets left="20.0" top="5.0" />
                           </HBox.margin></TextField>
                     </children>
                  </HBox>
                  <HBox prefHeight="42.0" prefWidth="200.0">
                     <children>
                        <ChoiceBox fx:id="filterBox" prefHeight="30.0" prefWidth="150.0">
                           <HBox.margin>
                              <Insets top="5.0" />
                           </HBox.margin></ChoiceBox>
                     </children>
                  </HBox>
                  <HBox prefHeight="42.0" prefWidth="182.0">
                     <children>
                        <CheckBox fx:id="showAvailableCheckBox" ellipsisString="" mnemonicParsing="false" prefHeight="49.0" prefWidth="182.0" text="Show only AVAILABLE ITEMS" textAlignment="CENTER" wrapText="true">
                           <font>
                              <Font size="10.0" />
                           </font>
                        </CheckBox>
                     </children>
                  </HBox>
                  <HBox prefHeight="42.0" prefWidth="91.0">
                     <children>
                        <Button fx:id="bookButton" mnemonicParsing="false" onAction="#validateBooking" prefHeight="54.0" prefWidth="127.0" text="BOOK" />
                     </children></HBox>
                  <Button mnemonicParsing="false" onAction="#getAllComponents" prefHeight="43.0" prefWidth="74.0" text="RELOAD" />
               </children>
            </HBox>
         </top>
         <center>
            <ScrollPane fx:id="scrollPane" prefHeight="458.0" prefWidth="914.0" BorderPane.alignment="CENTER">
               <content>
                  <VBox fx:id="vBox" prefHeight="446.0" prefWidth="850.0" />
               </content>
            </ScrollPane>
         </center>
         <right>
            <VBox fx:id="selectionBox" prefHeight="458.0" prefWidth="165.0" BorderPane.alignment="CENTER_LEFT" />
         </right>
      </BorderPane>
   </children>
</AnchorPane>
