<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="200.0" prefWidth="200.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.ya.LogInController">
   <center>
      <AnchorPane prefHeight="404.0" prefWidth="545.0" styleClass="rightAnchor" stylesheets="@app.css" BorderPane.alignment="CENTER">
         <children>
            <PasswordField fx:id="PasswordTextField" layoutX="67.0" layoutY="223.0" prefHeight="30.0" prefWidth="184.0" />
            <TextField fx:id="UsernameTextField" layoutX="68.0" layoutY="124.0" prefHeight="29.0" prefWidth="184.0" />
            <Label fx:id="UsernameLabel" layoutX="66.0" layoutY="75.0" prefHeight="31.0" prefWidth="94.0" text="Username" textFill="WHITE">
               <font>
                  <Font size="20.0" />
               </font>
            </Label>
            <Label fx:id="PasswordLabel" layoutX="65.0" layoutY="184.0" text="Password" textFill="#f8f8f8">
               <font>
                  <Font size="20.0" />
               </font>
            </Label>
            <Button fx:id="loginButton" layoutX="264.0" layoutY="291.0" mnemonicParsing="false" onAction="#login" prefHeight="38.0" prefWidth="85.0" text="Login" />
            <Label prefHeight="98.0" prefWidth="138.0" text="MakerSpace Manager" textAlignment="CENTER" wrapText="true">
               <font>
                  <Font name="Berlin Sans FB Demi Bold" size="22.0" />
               </font>
            </Label>
            <Label prefHeight="52.0" prefWidth="94.0" text="Login" wrapText="true">
               <font>
                  <Font name="Bodoni MT Black" size="27.0" />
               </font>
            </Label>
            <Label text="Don't have an account?" textFill="#0015ff" />
            <Button fx:id="SignUpButton" mnemonicParsing="false" onAction="#signUp" prefHeight="25.0" prefWidth="65.0" text="Sign Up" textFill="#2200ff" />
         </children>
      </AnchorPane>
   </center>
</BorderPane>
